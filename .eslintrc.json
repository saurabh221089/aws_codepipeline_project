{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
	"ignorePatterns": ["**/public/javascripts/vendor/*.js"],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
		"no-trailing-spaces" : 1,
        "no-undef"   : 0,
        "indent"     : 1,
        "quotes"     : 1,
        "semi-spacing" : 1,
        "key-spacing" : 2,
		"keyword-spacing" : 2,
		"max-depth" : ["error", 4]
    }
}
